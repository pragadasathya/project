  pipeline {
    agent any


    stages {
        stage('Checkout Code') {
            steps {
                echo 'scm git'
                git branch: 'main', url: 'https://github.com/pragadasathya/project.git'
            }
        }
    	

        stage('BuildingJar') {
            steps {
                echo 'maven build'
                sh 'cd Application && mvn clean package'
            }
        }
		
	
		
        stage('sonar') {
            steps {
                echo 'scanning project'
                sh 'ls -ltr'
                sh '''cd Application && mvn sonar:sonar \\
                      -Dsonar.host.url=http://13.220.133.244:9000 \\
                      -Dsonar.login=squ_744fdf6867429119c760acf0644415907cd1fa65'''
            }
    	}
       stage('Build docker image'){
            steps{
                script{
                    echo 'docker image build'
		    sh 'cd Application && docker build -t sathya240/cicd:${BUILD_NUMBER} .'
                }
            }
        }
		
       stage('docker image scan'){
        steps{
            sh "trivy image sathya240/cicd:${BUILD_NUMBER}"
        }
    }		
 

		 stage('Push image to Hub'){
            steps{
                script{
                   withCredentials([string(credentialsId: 'dockerhub', variable: 'dockerhub')]) {
                   sh 'docker login -u sathya240 -p ${dockerhub}'

              }
                   sh 'docker push sathya240/cicd:${BUILD_NUMBER}'
                }
            }
        }
		
      stage('Update kubernetes Deployment manifest File') {
        environment {
            GIT_REPO_NAME = "project"
            GIT_USER_NAME = "pragadasathya"
        }
        steps {
            withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                sh '''
                    git config user.email "pragadasathya566@gmail.com"
	            git config user.name "pragadasathya"
                    BUILD_NUMBER=${BUILD_NUMBER}
                  
                    sed -i "s/k8s:.*/k8s:${BUILD_NUMBER}/g" Ansible/k8s_deployment.yaml
                    git add .
                    git commit -m "Update deployment image tag to version ${BUILD_NUMBER}"
                    git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME}.git main
                '''
            }
        }
    }
      stage('k8s Deployment using ansible'){
            steps{
              
                    script{
                        ansiblePlaybook credentialsId: 'ssh', disableHostKeyChecking: true, installation: 'ansible', inventory: '/etc/ansible/', playbook: 'Ansible/ansible_k8s_deploy_playbook.yaml'
                   
                }
            }
        }
    }
}
